<Window x:Class="BuhWise.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Причина удаления"
        Height="180"
        Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30"
        Foreground="White"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Укажите причину удаления операции (необязательно)" Margin="0 0 0 8" TextWrapping="Wrap" />
        <TextBox x:Name="InputBox" Grid.Row="1" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
            <Button Content="OK" Width="80" Margin="0 0 8 0" Click="Ok_Click" />
            <Button Content="Отмена" Width="80" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
