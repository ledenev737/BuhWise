<Window x:Class="BuhWise.CurrenciesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Валюты" Height="400" Width="500" Background="#1E1E1E" Foreground="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="CurrencyGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding}"
                  Background="#202020"
                  Foreground="#EEEEEE"
                  RowBackground="#202020"
                  AlternatingRowBackground="#2A2A2A"
                  AlternationCount="2"
                  BorderBrush="#444444"
                  GridLinesVisibility="All"
                  HorizontalGridLinesBrush="#444444"
                  VerticalGridLinesBrush="#444444"
                  HeadersVisibility="Column"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="100" />
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" />
                <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
            <Button Content="Добавить" Padding="12,6" Margin="0 0 8 0" Click="AddCurrency_Click" />
            <Button Content="Изменить" Padding="12,6" Margin="0 0 8 0" Click="EditCurrency_Click" />
            <Button Content="Закрыть" Padding="12,6" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
