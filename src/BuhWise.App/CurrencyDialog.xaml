<Window x:Class="BuhWise.CurrencyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Валюта" Height="220" Width="360" Background="#1E1E1E" Foreground="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Код" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0 0 8 0" />
        <TextBox x:Name="CodeBox" Grid.Row="0" Grid.Column="1" Height="26" />

        <TextBlock Text="Название" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0 8 8 0" />
        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Height="26" Margin="0 8 0 0" />

        <CheckBox x:Name="ActiveBox" Content="Активна" Grid.Row="2" Grid.Column="1" Margin="0 8 0 0" IsChecked="True" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
            <Button Content="OK" Width="80" Margin="0 0 8 0" Click="Ok_Click" />
            <Button Content="Отмена" Width="80" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
